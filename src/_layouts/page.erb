---
layout: default
---

<% if resource.try(:collection)&.label == "posts" %>
  <%= render Post::HeaderComponent.new(resource) %>
<% else %>
  <h2 class="text-xl mb-5"><%= resource.data.title %></h2>
<% end %>

<%= render MarkdownComponent.new.with_content(content) %>

<% if resource.try(:collection)&.label == "posts" %>
  <%= resource.previous_doc.relative_url if resource.previous_doc %>
  <%= resource.next_doc.relative_url if resource.next_doc %>
<% end %>
